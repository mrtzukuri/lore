
<ul style="list-style: none; padding: 0px;">
    <div class="row">
    <% learningopportunities.each do |learning_opportunity| %>
      <div class="col-md-6">
        <div class="card-lo">
          <div class="bookmark-icon">
            <% @bookmark = UserBookmark.find_by(user: current_user, learning_opportunity: learning_opportunity) %>
            <%= render './learning_opportunities/bookmark_icon', bookmark: @bookmark, learning_opportunity_id: learning_opportunity.id %>
          </div>
          <div class="left-bar">
            <div class="text-and-image">
              <div class="card-lo-infos">
                <div>
                  <div class="card-title">
                    <h2><%= link_to learning_opportunity.name.truncate(75),
                      learning_opportunity_path(learning_opportunity, :query => params[:query])%></h2>
                  </div>
                  <% if learning_opportunity.location %>
                    <p class="card-location"><i class="fas fa-map-marker-alt"></i> <%= learning_opportunity.location %></p>
                  <% else %>
                    <p class="card-location"><i class="fas fa-map-marker-alt"></i> Online</p>
                  <% end %>
                  <p><%= learning_opportunity.description.truncate(190) %></p>
                </div>
                <br>
                <br>
                <p class="card-lo-review">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="far fa-star"></i>
                </p>
              </div>
              <h2 class="card-lo-pricing">
                <% if learning_opportunity.price == 0 %>
                  Free
                <% else %>
                  $<%= learning_opportunity.price %>.00
                <% end %>
              </h2>
            </div>
          </div>
        </div>
       </div>
    <% end %>
    </div>
</ul>
