<div class="d-flex">
  <div class="side-bar-filters">
    <div id="filters" class="d-flex justify-content-between">
      <div id="filters">
        <h3>Filters</h3>
        <div label="price-filter">
          <h5>Price</h5>
            <label for="min-price">Enter min price: </label>
            <input type="text" class="text-inputs" name="min-price" id="min-price">
            <label for="max-price">Enter max price: </label>
            <input type="text" class="text-inputs" name="max-price" id="max-price">
        </div>
        <br>
        <div label="date-filter">
          <h5>Date</h5>
            <label for="start-date">Enter start date: </label>
            <input type="text" class="text-inputs" name="start-date" id="start-date">
            <label for="end-date">Enter end date: </label>
            <input type="text" class="text-inputs" name="end-date" id="end-date">
        </div>
        <br>
        <div label="location-filter">
          <h5>Location</h5>
            <label for="location">Enter location: </label>
            <input type="text" class="text-inputs" name="location" id="location">
        </div>
        <br>
        <div label="type-filter">
          <h5>Type</h5>
            <input type="checkbox" id="Meet-up" name="Meet-up">
            <label for="Meet-up">Meetup</label>
            <input type="checkbox" id="course" name="course">
            <label for="course">Course</label>
        </div>
      </div>
    </div>
  </div>
  <div class="filter-results-and-sort">
    <h1><%= params[:query] %> Learning Opportunities</h1>
    <hr>
    <div>
      <div class="sort" class="justify-content-end">
        <a href="#" id="sort-by-price">Sort by price</a> |
        <a href="#" id="sort-by-duration">Sort by duration</a>
      </div>
      <br>
      <div class="results">
        <h3>Results</h3>
        <ul style="list-style: none; padding: 0px;">
          <% @learningopportunities.each do |learning_opportunity| %>
            <div class="learning-opp-list-item">
              <div class="left-bar">
                <div class="text-and-image">
                  <img class="learning-opp-image" src="https://source.unsplash.com/1600x900/?<%= learning_opportunity.name %>">
                  <div class="main-text">
                    <li>
                      <h4><%= link_to learning_opportunity.name, learning_opportunity_path(learning_opportunity) %></h4>
                      <p> <%= learning_opportunity.description %> </p>
                    </li>
                  </div>
                </div>
                <div class="grey-bar">
                </div>
              </div>
              <div class="right-bar">
                <div class="bookmark-icon">
                  <i class="far fa-bookmark"></i>
                </div>
                <div class="details">
                  <hr>
                  <p>Details <br> From <%= learning_opportunity.start_date %> <br>
                  <i class="fas fa-angle-double-down"></i> </p>
                </div>
              </div>
            </div>
            <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
